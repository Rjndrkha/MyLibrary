<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="org.aplas.mylibrary.viewmodels.User"
            />
        <variable
            name="book"
            type="org.aplas.mylibrary.viewmodels.Book"
            />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@{user.color}">
        <LinearLayout
            android:id="@+id/headerInputBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mylibrary"/>
            <TextView
                android:id="@+id/txtTitleInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Book Data"
                android:textStyle="bold"
                android:textSize="10pt"
                android:layout_marginTop="10dp"
                android:textColor="#FFD369"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="8pt"
                android:layout_marginTop="10dp"
                android:textColor="#FFD369"/>
            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:text="@{book.bookTitle}"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="8pt"
                android:layout_marginTop="10dp"
                android:textColor="#FFD369"/>
            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:entries="@array/book_types"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="8pt"
                android:layout_marginTop="10dp"
                android:textColor="#FFD369"/>
            <EditText
                android:id="@+id/editYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:text="@{book.bookYear}"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnSaveBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save This Book"
            android:textSize="11dp"
            android:textColor="#222831"
            android:backgroundTint="@color/lightBlue"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnShow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="View Data"
                android:textSize="11dp"
                android:textColor="#222831"
                android:background="@drawable/btn_edit"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Save User Data"
                android:textSize="11dp"
                android:textColor="#222831"
                android:background="@drawable/btn_logout"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
            android:text="@{user.profile}"/>
    </LinearLayout>
</layout>